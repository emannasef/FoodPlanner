<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="150dp"
android:layout_height="95dp"
android:layout_gravity="center_horizontal"
app:cardCornerRadius="30dp"
android:elevation="20dp"
android:layout_margin="2dp"
android:padding="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/plan_card_row"
        android:layout_width="150dp"
        android:layout_height="95dp">

        <ImageView
            android:id="@+id/mealPlan_ImageView"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/welcome_original_img" />

        <ImageView
            android:id="@+id/deleteFromMealPlan_imageView"
            android:layout_width="20dp"
            android:layout_height="27dp"
            android:layout_gravity="end"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            app:layout_constraintStart_toStartOf="@+id/mealPlan_ImageView"
            app:layout_constraintTop_toBottomOf="@+id/mealPlan_ImageView"
            app:srcCompat="@drawable/delete_icon" />

        <TextView
            android:id="@+id/mealNameInMealPlan_textView"
            android:layout_width="85dp"
            android:layout_height="28dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="2dp"
            android:textSize="12sp"
            android:inputType="textMultiLine"
            android:text="TextView"
            app:layout_constraintStart_toEndOf="@+id/deleteFromMealPlan_imageView"
            app:layout_constraintTop_toBottomOf="@+id/mealPlan_ImageView" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>